{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Portfolio",
  "main": "index.php",
  "author": "Justin Franzen",
  "license": "All Rights Reserved",
  "private": true,
  "scripts": {
    "dev": "npm run build && npm-watch build",
    "build": "npm-run-all build:js build:style",
    "build:style": "sass css/index.scss dist/index.css",
    "build:js": "webpack --config ./webpack.config.development.js",
    "lint": "npm-run-all --sequential lint:js lint:style lint:php prettier",
    "lint:fix": "npm-run-all --sequential lint:js:fix lint:style:fix prettier:fix",
    "lint:js": "eslint . --ext .js --cache",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:php": "phplint '**/*.php' '!node_modules/**' --cache",
    "lint:style": "stylelint '**/*.scss' --cache",
    "lint:style:fix": "npm run lint:style -- --fix",
    "prettier": "prettier --check '*.json' '**/*.json' '*.js' '**/*.js' '*.php' '**/*.php' '**/*.scss'",
    "prettier:fix": "npm run prettier -- --write"
  },
  "watch": {
    "build": {
      "patterns": [
        "js",
        "js/admin",
        "functions/widen/js",
        "css",
        "modules"
      ],
      "extensions": "js,css,scss",
      "ignore": [
        "dist",
        "node_modules"
      ]
    }
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "dependencies": {
    "shoestring": "^2.0.1",
    "skrollr": "0.6.26",
    "tablesaw": "^3.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/eslint-parser": "^7.18.9",
    "@babel/preset-env": "^7.18.10",
    "@prettier/plugin-php": "^0.18.9",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "eslint": "^8.22.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "phplint": "^2.0.5",
    "prettier": "^2.7.1",
    "sass": "^1.54.5",
    "style-loader": "^3.3.1",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
